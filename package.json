{
  "name": "std-types",
  "private": true,
  "description": "Steve the Dev's Type-Checking Library",
  "author": "Steven Jimenez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevethedev/std-types.git"
  },
  "bugs": {
    "url": "https://github.com/stevethedev/std-types/issues"
  },
  "homepage": "https://github.com/stevethedev/std-types#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "node ./bin/build.mjs",
    "check": "npm-run-all check:*",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:types": "tsc --noEmit",
    "fix": "npm-run-all fix:*",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix .",
    "test": "npm-run-all test:jsdom test:node",
    "test:jsdom": "jest --env=jest-environment-jsdom --coverage",
    "test:node": "jest --env=node --coverage",
    "plop": "plop"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.26.0",
    "esbuild": "^0.25.5",
    "esbuild-plugin-d.ts": "^1.3.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "npm-run-all": "^4.1.5",
    "plop": "^4.0.1",
    "prettier": "^3.6.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "^@std-types/([^/]+)$": "<rootDir>/packages/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/packages/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.json",
          "useESM": true
        }
      ]
    },
    "globals": {
      "process.env.SVG_ICON_BASE_URL": "https://svg-icon-base-url/"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error"
    },
    "overrides": [
      {
        "env": {
          "jest": true
        },
        "files": [
          "*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  }
}
